<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layOutDetalhesSucoSimples"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA0D47A1"
    android:visibility="visible"
    tools:context=".activity.DetalheSimplesActivity">

    <LinearLayout
        android:id="@+id/llvDetalhesSucoSimples"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/globalshape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/llhNomeClienteSS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCartaoNum"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="#82B1FF"
                android:fontFamily="sans-serif"
                android:textIsSelectable="false"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNomeCliente"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="#82B1FF"
                android:fontFamily="sans-serif"
                android:textAllCaps="true"
                android:textIsSelectable="false"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llhQtdeEVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#82B1FF"
                    android:gravity="center_vertical"
                    android:text="SUCO:"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblQtde"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#82B1FF"
                    android:gravity="center|center_vertical"
                    android:text="QUANTIDADE:"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblTamanhoSuco"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#82B1FF"
                    android:gravity="center_vertical"
                    android:text="TAMANHO:"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblAdocantetp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#82B1FF"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="ADOÃ‡ANTE"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblOpt1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#82B1FF"
                    android:gravity="center"
                    android:text="ADICIONAL:"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textboxshape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSucoSimplesNome"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spQtdeSS"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:dropDownWidth="wrap_content"
                    android:minWidth="2dp"
                    android:scrollbarSize="4dp"
                    android:spinnerMode="dialog"
                    android:textAlignment="center" />

                <ToggleButton
                    android:id="@+id/tgbTamSuco"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="ToggleButton"
                    android:textColorLink="#0E776D"
                    android:textIsSelectable="true"
                    android:textOff="300 ml"
                    android:textOn="300 ml"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spListaAdocantes"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:spinnerMode="dialog"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/spOpt1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:spinnerMode="dialog"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llhOptionsSS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#82B1FF"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llvGeloEViagem"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#82B1FF"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ckbSemGelo"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="#82B1FF"
                    android:text="SEM GELO"
                    android:textAlignment="textStart"
                    android:textColorHighlight="#0D47A1"
                    android:textColorLink="#0E776D"
                    android:textSize="24sp" />

                <CheckBox
                    android:id="@+id/ckbViagem"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:background="#82B1FF"
                    android:text="VIAGEM"
                    android:textAlignment="textStart"
                    android:textColorLink="#0E776D"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llhEmviarSS"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOK"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:background="@drawable/button_green_theme"
                android:elegantTextHeight="true"
                android:fontFamily="sans-serif"
                android:onClick="confirmaPedido"
                android:shadowDx="0"
                android:shadowDy="0"

                android:shadowRadius="0"
                android:text="CONFIRMAR"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>